<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ng.grad_proj.eccessmanagementapplication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <!-- 인터넷 권한 획득 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 환경설정 추가 -->
    <!-- 타이틀바 제거 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main" />

        <activity android:name=".Activity.DoorlockDetailActivity"
            android:theme="@style/EmpDialog">
        </activity>

        <activity android:name=".Activity.EmployeeDetailActivity"
            android:theme="@style/EmpDialog">
        </activity>
        <activity android:name=".Activity.AddDoorlockActivity"
            android:theme="@style/EmpDialog">
        </activity>
        <activity android:name=".Activity.AddEmployeeActivity"
            android:theme="@style/EmpDialog">
        </activity>
    </application>

</manifest>